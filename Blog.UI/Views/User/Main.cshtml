@model Blog.API.Models.User;
@{
    ViewData["Title"] = "User";
}
<div id="main">

    <div class="col-sm-5 text-center h3">
        @Model.Name
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/article/add" method="get">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Add Article">
        </form>
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/user/update" method="get">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Change Password">
        </form>
    </div>

    <div class="col-sm-2 text-center h3">
        <input type="submit" class="btn btn-outline-primary btn-lg" id="deleteUser" value="Delete User">
    </div>

    <div class="col-sm-1 text-center h3">
        <form action="/user/logout" method="post">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Logout">
        </form>
    </div>

    <div class="col-sm-12 text-left h4">
        <p></p>
        <p></p>
    </div>

</div>
<script>
    var deleteUser = document.getElementById('deleteUser');
    deleteUser.addEventListener('click', () => {
        var id = @Model.Id;
        var xhr = new XMLHttpRequest();
        xhr.open('DELETE', '/user/delete/1234');
        xhr.onload = () => {
            alert(xhr.status);
            document.location.href = '/';
        };
        xhr.send();
    });
</script>
