@model Blog.API.Models.FullUser;
@{
    ViewData["Title"] = "User";
}
<div id="main">

    <div class="col-sm-5 text-center h3">
        @Model.User.Name
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/article/create" method="get">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Create Article">
        </form>
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/user/update" method="get">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Change Password">
        </form>
    </div>

    <div class="col-sm-2 text-center h3">
        <input type="submit" class="btn btn-outline-primary btn-lg" id="deleteUser" value="Delete User">
    </div>

    <div class="col-sm-1 text-center h3">
        <form action="/user/logout" method="post">
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Logout">
        </form>
    </div>

    <div class="col-sm-12">
        @if (@Model.Articles != null)
        {
            @foreach (var Article in @Model.Articles.OrderByDescending(x => x.Key.Date))
            {
                <div class="col-sm-12 h4 border border-primary rounded">
                    @if (@Article.Key.UserId == @Model.User.Id)
                    {
                        <p class="col-sm-6 text-center h4">@Article.Key.Title</p>
                        <div class="col-sm-2 text-center h5">
                            <form action="/article/update/@Article.Key.Id" method="get">
                                <input type="submit" class="btn btn-outline-primary btn-lg" value="Update Article">
                            </form>
                        </div>
                        <div class="col-sm-2 text-center h5">
                            <input type="button" class="btn btn-outline-primary btn-lg" onclick="
                              if(window.confirm('Are you sure you want to delete?'))
                              {
                                  fetch('/article/' + @Article.Key.Id, {
                                      method: 'DELETE'
                                  }).then((response) => {
                                      if (response.status != '204')
                                          return alert('Something went wrong. Cannot delete article.');
                                      alert('Article has been deleted correctly.');
                                      window.location.href = '/';
                                  });
                              }
                            " value="Delete Article">
                        </div>
                        <div class="col-sm-2 text-center h5">
                            <form action="/comment/@Article.Key.Id" method="get">
                                <input type="submit" class="btn btn-outline-primary btn-lg" value="Add Comment"/>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p class="col-sm-10 text-center h4">@Article.Key.Title</p>
                        <div class="col-sm-2 text-center h5">
                            <form action="/comment/@Article.Key.Id" method="get">
                                <input type="submit" class="btn btn-outline-primary btn-lg" value="Add Comment"/>
                            </form>
                        </div>
                    }
                    <p class="col-sm-12 text-left h5" style="word-break: break-word;">@Article.Key.Content</p>
                    <p class="col-sm-6 text-left">Author: @Article.Key.UserName</p>
                    <p class="col-sm-6 text-right">Last edit: @Article.Key.Date</p>
                </div>
                @if (@Article.Value != null)
                {
                    @foreach (var Comment in @Article.Value.OrderByDescending(x => x.Date))
                    {
                        <div class="col-sm-12 h5 border border-primary rounded">
                        @if (@Comment.UserId == @Model.User.Id)
                        {
                            <div class="col-sm-12 text-center h5">
                                <input type="button" class="btn btn-outline-primary btn-lg" onclick="
                                    if(window.confirm('Are you sure you want to delete?'))
                                    {
                                        fetch('/comment/' + @Comment.Id, {
                                            method: 'DELETE'
                                        }).then((response) => {
                                        if (response.status != '204')
                                            return alert('Something went wrong. Cannot delete comment.');
                                            alert('The comment has been deleted correctly.');
                                            window.location.href = '/';
                                        });
                                    }
                              " value="Delete Comment">
                          </div>
                        }
                        <div class="col-sm-12 normal-margin text-left">@Comment.Content</div>
                        <div class="col-sm-6 text-left">Author: @Comment.Author</div>
                        <div class="col-sm-6 text-right">Date: @Comment.Date</div>

                        </div>

                     }
                }
            }
        }
    </div>
</div>
<script>
    document.getElementById('deleteUser').addEventListener('click', () => {
        fetch('/user/' + @Model.User.Id, {
            method: 'DELETE',
        }).then((response) => {
          if (response.status != '204')
              return alert('Something went wrong, cannot delete the user.');
          alert("The user has been deleted correctly.");
          window.location.href = '/';
        });
    });
</script>
