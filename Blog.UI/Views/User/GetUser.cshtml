@model Blog.API.Models.User;
@{
    ViewData["Title"] = "User";
}
<div id="main">

    <div class="col-sm-5 text-center h3">
        @Model.Name
    </div>

    <div class="col-sm-2 text-center h3">
        @using (Html.BeginForm("AddView", "Article", FormMethod.Get))
        {
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Add Article">
        }
    </div>

    <div class="col-sm-2 text-center h3">
        @using (Html.BeginForm("UpdateView", "User", FormMethod.Get))
        {
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Change Password">
        }
    </div>

    <div class="col-sm-2 text-center h3">

        @using (Html.BeginForm("Delete/" + Model.Id, "User", FormMethod.Post))
        {
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Delete User">
        }
    </div>

    <div class="col-sm-1 text-center h3">

        @using (Html.BeginForm("Logout", "User", FormMethod.Post))
        {
            <input type="submit" class="btn btn-outline-primary btn-lg" value="Logout">
        }
    </div>

    <div class="col-sm-12 text-left h4">
        <p></p>
        <p></p>
    </div>

</div>
