@model Blog.API.Models.User;
@{
    ViewData["Title"] = "User";
}
<div id="main">

    <div class="col-sm-5 text-center h3">
        @Model.Name
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/article/add" method="get">
            <input type="submit" value="Add Article">
        </form>
        @*<a href="/article/add">
            Add Article
        </a>*@
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/user/update" method="get">
            <input type="submit" value="Change Password">
        </form>
        @*<a href="/user/update">
            Change Password
        </a>*@
    </div>

    <div class="col-sm-2 text-center h3">
        <form action="/user/delete" method="delete">
            <input type="submit" value="Delete User">
        </form>
        @*<a href="/user/delete"> Delete User </a>*@
    </div>

    <div class="col-sm-1 text-center h3">
        <form action="/user/logout" method="post">
            <input type="submit" value="Logout">
        </form>
        @*<a href="/user/logout"> Logout </a>*@
    </div>

</div>
