@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8"  />
    <title>@ViewData["Title"] - Blog</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" >
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <div class="container body-content">
        <div class="text-center h1 bg-black">
            <p class="p-3 text-white">Blog</p>
        </div>
        @if(httpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
        {
            <div class="row bg-black">
                <div class="col-md-3">
                    <a class="a-default" asp-action="Index" asp-controller="Home">
                        Main Page
                    </a>
                </div>
                <div class="col-md-3">
                    <a class="a-default" asp-action="Index" asp-controller="Home">
                        Edit Profile
                    </a>
                </div>
                <div class="col-md-3">
                    <a class="a-default" asp-action="Index" asp-controller="Home">
                        Add Post
                    </a>
                </div>
                <div class="col-md-3">
                    <form asp-action="Logout" asp-controller="User" method="POST">
                        <button style="text-decoration: none;">Logout</button>
                    </form>
                </div>
            </div>        
        }
        @RenderBody()
        <footer class="text-center bg-black">
            <a class="a-default" href="https://github.com/jurczakk/Blog">Github</a>   
        </footer>
    </div>
</body>
</html>