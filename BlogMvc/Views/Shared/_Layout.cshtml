@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8"  />
    <title>@ViewData["Title"] - Blog</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans" >
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <div class="container body-content">
        <div class="text-center h1" style="background-color: black;"><h2>Blog</h2></div>
        @if(httpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
        {
            <div class="row" style="background-color: black;">
                <div class="col-md-3" style="color: white;">
                    <a>Main Page</a>
                </div>
                <div class="col-md-3" style="color: white;">
                    <a>Edit Profile</a>
                </div>
                <div class="col-md-3" style="color: white;">
                    <a>Add Post</a>
                </div>
                <div class="col-md-3" style="color: white;">
                    <form asp-action="Logout" asp-controller="User" method="POST">
                        <button style="text-decoration: none; "> Logout </button>
                    </form>
                </div>
            </div>        
        }
        @RenderBody()
        <footer class="text-center" style="background-color: black;">
            <p><a href="https://github.com/jurczakk/Blog" style="text-decoration: none; color: white;">Github</a></p>            
        </footer>
    </div>
</body>
</html>