@model BlogEntities.User
@{
    ViewData["Title"] = "Main Page";
}

<div class="row">
    <div class="col-md-6">
        <h2 class="text-md-center">Login</h2>
        @using (@Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <input class="mt-2 form-control" asp-for="Email" placeholder="Email" type="email" />
            <input class="mt-2 form-control" asp-for="Password" placeholder="Password" type="password" />
            <div class="text-center h2">
                <input class="mt-2 btn btn-primary btn-lg" type="submit" value="Login" />
            </div>
        }
    </div>
    <div class="col-md-6">
        <h2 class="text-md-center">Register</h2>
        @using(@Html.BeginForm("Register", "User", FormMethod.Post))
        {
            <input class="mt-2 form-control" asp-for="Email" placeholder="Email" type="email" />
            <input class="mt-2 form-control" asp-for="Password" placeholder="Password" type="password" />
            <div class="text-center h2">
                <input class="mt-2 btn btn-primary btn-lg" type="submit" value="Register" />
            </div>
        }
    </div>
</div>