@model BlogData.Entities.User; 
@{
    ViewData["Title"] = "Register";
}
<div class="row bg-black">
    <div class="col-md-10">
        <h3 class="text-white text-left m-2 align-middle">Register</h3>
    </div>
    <div class="col-md-2">
          @using(Html.BeginForm("Index", "Home", FormMethod.Get,  new { @class = "text-right align-middle" })) {
            <input class="m-2 btn btn-outline-light border-0" type="submit" value="Back" />
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @using (@Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "mt-2 form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "mt-2 form-control" })    
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <div class="text-center align-middle mb-2">
                @Html.ValidationMessage("error", new { @class = "text-danger" })
            </div>
            <div class="text-center"> 
                <input class="h2 mt-2 btn btn-outline-lg bg-black text-white" type="submit" value="Register" />
            </div>
            <div class="text-center">
                <a asp-action="Login" asp-controller="User">Click here to Login!</a>
            </div>
        }
    </div>
</div>