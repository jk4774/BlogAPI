@model BlogEntities.User; 
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-12">
        <p class="bg-black p-3 text-white">Register</p>               
        @using (@Html.BeginForm("Register", "User", FormMethod.Post))
        {
            @Html.ValidationSummary()
            
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "mt-2 form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "mt-2 form-control" })    
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            <div class="text-center h2"> 
                <a class="align-middle" asp-action="Index" asp-controller="Home">Back</a>
                <input class="mt-2 btn btn-outline-lg bg-black text-white" type="submit" value="Register" />
            </div>
        }
    </div>
</div>